<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scroller" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView
		    style="@style/h1_boven"
		    android:text="@string/weer_huidigweer" />
		<TextView
		    style="@style/h1_onder"
		    android:text="@string/weer_bron_google" />
        <include layout="@layout/weer_advies_huidig" />
        
        <TextView
            style="@style/h1_boven"
            android:text="@string/weer_advies" />
        <TextView
            style="@style/h1_onder"
            android:text="@string/weer_bron_google" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dip" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weer_verwachte_max_temp" />
            <TextView
                android:id="@+id/weer_verwachte_max_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dip"
                android:paddingRight="5dip" />
        </LinearLayout>
        <TextView	
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10dip"
			android:text="@string/weer_advies_organisatie" />
        <TextView
            android:id="@+id/weer_advies"
            style="@style/container_block" />
    </LinearLayout>
</ScrollView>