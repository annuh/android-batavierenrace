<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/viewport">
	<ScrollView
    	style="@style/scroller"
   	 	android:id="@+id/scroller">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:text="@string/lustrum_h1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/h1" />
            
            <TextView
                android:id="@+id/lustrum_omschrijving1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                style="@style/container_block" />

            <ImageView
                android:id="@+id/lustrum_plaatje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:contentDescription="Lustrum plaatje" />

            <TextView
                android:id="@+id/lustrum_omschrijving2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/container_block" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>