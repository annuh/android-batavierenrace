<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listview_row" >

    <TextView
        android:id="@+id/etappe"
        style="@style/listview_text"
        android:layout_width="30dp" />

    <TextView
        android:id="@+id/tijd"
        style="@style/listview_text"
        android:layout_width="90dp"
        android:layout_toRightOf="@id/etappe" />

    <TextView
        android:id="@+id/snelheid"
        style="@style/listview_text"
        android:layout_toRightOf="@id/tijd" />

    <TextView
        android:id="@+id/etappe_klassement"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/cum_klassement"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/etappe_foutcode"
        style="@style/listview_text"
        android:layout_alignParentRight="true" />

</RelativeLayout>