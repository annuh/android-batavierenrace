<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/listview_header" >

        <TextView
            android:id="@+id/etappe_looptijden_header_plaats"
            style="@style/listview_header_text"
            android:layout_width="35dp"
            android:text="#" />

        <TextView
            style="@style/listview_header_text"
            android:layout_toRightOf="@id/etappe_looptijden_header_plaats"
            android:text="Team" />

        <TextView
            style="@style/listview_header_text"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="Tijd" />

    </RelativeLayout>

    <TextView
        android:id="@+id/loading"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:text="Bezig met laden..."
        android:textSize="30dp" />

    <ListView
        android:id="@android:id/list"
        style="@style/MyListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leeg" />

</LinearLayout>