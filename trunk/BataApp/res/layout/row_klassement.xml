<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight" >
    
   

    <TextView  
        android:id="@+id/klassement_plaats"
		style="@style/listview_text"
		android:width="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/klassement_team"
        style="@style/listview_text"
        android:layout_toRightOf="@id/klassement_plaats" />
    
    <TextView
        android:id="@+id/klassement_tijd"
        style="@style/listview_text"
        android:layout_toRightOf="@id/klassement_team"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>