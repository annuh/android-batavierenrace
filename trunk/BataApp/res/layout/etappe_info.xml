<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    style="@style/scroller" >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >"
	
	    <TextView
	        android:id="@+id/label_info"
	        android:text = "@string/etappe_informatie"
	        style="@style/container_head" />
	    
	    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    style="@style/table" >"
		    <TableRow>
		        <TextView
		            android:id="@+id/label_routeafstand"
		            android:text = "@string/etappe_informatie_afstand"
		            style="@style/table_left" />
		        <TextView
		            android:id="@+id/text_routeafstand"
		            style="@style/table_right" />
		    </TableRow>
		
		    <TableRow>
		        <TextView
		            android:id="@+id/label_routegeslacht"
		            android:text = "@string/etappe_informatie_geslacht"
		            style="@style/table_left" />
		        <TextView
		            android:id="@+id/text_routegeslacht"
		            style="@style/table_right" />
		    </TableRow>
		</TableLayout>

	    
	    <TextView
	        android:id="@+id/label_hoogteverschil"
	        android:text = "@string/etappe_hoogteverschil"
		 	style="@style/container_head" />
	      
	    <LinearLayout
	        android:background="@drawable/container_background"
	        android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="1dp" >		
			<ImageView 
				android:id="@+id/image_hoogteverschil"
				android:src="@drawable/grafiek"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
	     </LinearLayout>
	    
	    
	    <TextView
	        android:id="@+id/label_recordtijd"
	        android:text = "@string/etappe_recordtijd"
	        style="@style/container_head" />
	        
	    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    style="@style/table" >
		    <TableRow>
			    <TextView
			        android:id="@+id/label_recordtijd_team"
			        android:text = "@string/etappe_recordtijd_team"
				    style="@style/table_left" />
			       
			    <TextView
			        android:id="@+id/recordtijd_team"
				    style="@style/table_right" />
			</TableRow>
		
		    <TableRow>
			    <TextView
			        android:id="@+id/label_recordtijd_tijd"
			        android:text = "@string/etappe_recordtijd_tijd"
			        style="@style/table_left" />
			     <TextView
			        android:id="@+id/recordtijd_tijd"
			        style="@style/table_right" />
			</TableRow>
		</TableLayout>

	</LinearLayout>
</ScrollView>