<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scroller" >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	
	    <TextView
	        android:text = "Looproute"
	        style="@style/h1" />
	    
	    <LinearLayout 
	    	android:orientation="horizontal"
	    	style="@style/container_block">
	        
	        <ImageView
	            android:id="@+id/lopers_maps"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:src="@drawable/icon_maps" >
	        </ImageView>
	        
	        <ImageView
	            android:id="@+id/lopers_earth"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:src="@drawable/icon_earth" >
	        </ImageView>
	        
	        
	    </LinearLayout>
	    
	    <TextView
	        android:text = "Autoroute"
	        style="@style/h1" />
	    
	    <TextView
	        android:text = "Overslagroute"
	        style="@style/h1" />
	    
	</LinearLayout>
</ScrollView>