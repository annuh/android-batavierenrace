<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scroller" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

	    <TextView
			android:text = "@string/team_informatie"
			style="@style/h1" />
	    <TextView
	        android:layout_height="10dp"
	        android:layout_width="fill_parent"
			android:background = "@drawable/onder" />	    
	    <TableLayout
		    style="@style/table" >
		    
	        <TableRow
				android:layout_width="match_parent"
		    	android:layout_height="wrap_content">
		       
		       <TextView
		    		android:text="@string/team_naam"
		    		style="@style/table_left" />		       
		       
		       <TextView
		    		android:id="@+id/team_naam"
		    		style="@style/table_right" />
		       
		   </TableRow>
		   
		   <TableRow
				android:layout_width="match_parent"
		    	android:layout_height="wrap_content">
		       
		       <TextView
		    		android:text="@string/team_startnummer"
		    		style="@style/table_left" />		       
		       
		       <TextView
		    		android:id="@+id/team_startnummer"
		    		style="@style/table_right" />
		   </TableRow>
		   
		   <TableRow
				android:layout_width="match_parent"
		    	android:layout_height="wrap_content" >
		       <TextView
					android:text="@string/team_startgroep"
					style="@style/table_left" />		       
		       <TextView
		           android:id="@+id/team_startgroep"
		    		style="@style/table_right" />
		   </TableRow>

		</TableLayout>  
	   
	</LinearLayout>
</ScrollView>