<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    style="@style/scroller" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/h1"
            android:text="Bel 112" />

        <LinearLayout
            android:id="@+id/bel_112"
            style="@style/container_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:src="@drawable/icon_phone" />

            <TextView
                android:id="@+id/label_112"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="112"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            style="@style/h1"
            android:text="Infomeer de organisatie" />

        <LinearLayout
            android:id="@+id/bel_organisatie"
            style="@style/container_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:src="@drawable/icon_phone" />

            <TextView
                android:id="@+id/label_belorganisatie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="0031 - (0)53 - 4895331"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>