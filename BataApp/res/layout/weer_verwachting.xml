<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    style="@style/scroller" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/h1"
            android:text="@string/verwachtweer" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:stretchColumns="0" >

            <TableRow>

                <TextView
                    android:text="@string/plaats"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:padding="3dip"
                    android:text="@string/temperatuur"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:text="@string/weericoon"
                    android:textColor="@android:color/darker_gray" />
            </TableRow>

            <TableRow>

                <TextView android:text="@string/nijmegen" />

                <TextView
                    android:id="@+id/nijmegen_verwacht_temp"
                    android:padding="3dip" />

                <ImageView
                    android:id="@+id/nijmegen_verwacht_icoon"
                    android:gravity="right" />
            </TableRow>

            <TableRow>

                <TextView android:text="@string/ruurlo" />

                <TextView
                    android:id="@+id/ruurlo_verwacht_temp"
                    android:padding="3dip" />

                <ImageView
                    android:id="@+id/ruurlo_verwacht_icoon"
                    android:gravity="right" />
            </TableRow>

            <TableRow>

                <TextView android:text="@string/enschede" />

                <TextView
                    android:id="@+id/enschede_verwacht_temp"
                    android:padding="3dip" />

                <ImageView
                    android:id="@+id/enschede_verwacht_icoon"
                    android:gravity="right" />
            </TableRow>
        </TableLayout>

        <TextView
            style="@style/h1"
            android:text="@string/algemeneverwachting" />

        <TextView
            android:id="@+id/algemene_verwachting"
            style="@style/container_block" />
    </LinearLayout>

</ScrollView>