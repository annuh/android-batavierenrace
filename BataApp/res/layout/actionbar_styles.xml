<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/border_top" />
	<com.ut.bataapp.DashboardLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1" >
	    
	    <Button
	        android:id="@+id/dashboard_favorieten"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/favorieten"
	        android:text="@string/dashboard_favorieten" />
	    
	    <Button
	        android:id="@+id/dashboard_klassement"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/klassement"
	        android:text="@string/dashboard_klassement" />
	    
	    <Button
	        android:id="@+id/dashboard_teams"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/menu"
	        android:text="@string/dashboard_teams" />	    
	    
	    <Button
	        android:id="@+id/dashboard_etappes"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/etappes"
	        android:text="@string/dashboard_etappes" />
	    
	    <Button
	        android:id="@+id/dashboard_informatie"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/informatie"
	        android:text="@string/dashboard_informatie" />
	    
	    <Button
	        android:id="@+id/dashboard_jubileum"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/jubileum"
	        android:text="@string/dashboard_jubileum" />
	    
	    <Button
	        android:id="@+id/dashboard_bataradio"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/radio"
	        android:text="@string/dashboard_bataradio" />
	    
	    <Button
	        android:id="@+id/dashboard_weer"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/weer"
	        android:text="@string/dashboard_weer" />	    
	    
	    <Button
	        android:id="@+id/dashboard_sponsor"
	        style="@style/DashboardButton"
	        android:drawableTop="@drawable/menu"
	        android:text="@string/dashboard_sponsor" />
	   
	</com.ut.bataapp.DashboardLayout>
	<View
		android:background="#000"
		android:layout_width="fill_parent"
		android:layout_height="1dp" />
	
	<LinearLayout
	    android:layout_width="match_parent"
    	android:layout_height="50dip"
    	android:background="@drawable/batablauw" >
	    <TextView 
	        android:id="@+id/dashboard_time"
	        android:textSize="20dip"
	        android:gravity="center_vertical|center_horizontal"
    		android:layout_width="match_parent"
	        android:layout_height="match_parent" />
	</LinearLayout>
</LinearLayout>