<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listview_row" >
    
    <TextView  
        android:id="@+id/klassement_plaats"
		style="@style/listview_text"
		android:width="35dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/klassement_tijd"
        style="@style/listview_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
    
    <TextView
        android:id="@+id/klassement_team"
        style="@style/listview_text"
        android:layout_toLeftOf="@id/klassement_tijd"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/klassement_plaats" />
    
    

</RelativeLayout>